# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2

[docker-compose{,.staging,.prod,.dev,.test,.override}.{yaml,yml}]
indent_style = space
indent_size = 2

[{Dockerfile,*.dockerfile}]
indent_style = tab

[justfile]
indent_style = tab
